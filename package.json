{
  "name": "osrs-tracker-api",
  "version": "0.1.0",
  "private": true,
  "description": "This repository contains the NestJS API for OSRS Tracker.",
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "author": {
    "name": "Freek Mencke",
    "email": "freek_mencke.dev@outlook.com",
    "url": "https://freekmencke.com"
  },
  "repository": {
    "type": "git",
    "url": "github:osrs-tracker/osrs-tracker-api"
  },
  "scripts": {
    "build": "NODE_ENV=production nest build -b webpack",
    "docker:build": "docker build -t freekmencke/osrs-tracker-api:latest .",
    "docker:push": "docker push freekmencke/osrs-tracker-api:latest",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:ci": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.1.2",
    "@osrs-tracker/models": "^0.6.0",
    "date-fns": "^4.1.0",
    "express-prom-bundle": "^8.0.0",
    "mongodb": "^6.15.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.7",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
